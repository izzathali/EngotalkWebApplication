@using Engotalk.Model
@model CourseM
@{
    ViewData["Title"] = "Edit Course";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";

}


<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1></h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Course</a></li>
                    <li class="breadcrumb-item active">Edit</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content ">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="card card-lightblue">
                    <div class="card-header">
                        <h3 class="card-title">Update Course</h3>
                    </div>
                    <!-- /.card-header -->

                    <form asp-action="Edit">
                        <input type="hidden" asp-for="CourseId" />

                        <div class="col-md-12">

                            <!-- form start -->
                            <div class="card-body">

                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                            <label for="exampleInputEmail1">Country</label>
                                            <span class="text-danger"></span>

                                            <select id="CountryList" type="text" class="form-control" asp-items="ViewBag.CountryId">
                                                <option disabled selected>--- SELECT ---</option>

                                            </select>

                                        </div>
                                    </div>

                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                            <label for="exampleInputEmail1">University / College</label>
                                            <span class="text-danger"></span>

                                            <select id="UniversityList" type="text" class="form-control" asp-items="ViewBag.UniversityId">
                                                <option disabled selected>--- SELECT ---</option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                            <label for="exampleInputEmail1">Department</label>
                                            <span asp-validation-for="DepartmentId" class="text-danger"></span>

                                            <select asp-for="DepartmentId" type="text" class="form-control" asp-items="ViewBag.DepartmentId">
                                                <option disabled selected>--- SELECT ---</option>
                                            </select>
                                        </div>
                                    </div>

                                </div>

                                <div class="row">

                                    <div class="col-md-4">

                                        <div class="form-group">
                                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                            <label for="exampleInputEmail1">Course</label>
                                            <span asp-validation-for="Course" class="text-danger"></span>

                                            <input asp-for="Course" type="text" class="form-control" placeholder="Course">
                                        </div>
                                    </div>

                                    <div class="col-md-4">

                                        <div class="form-group">
                                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                            <label for="exampleInputEmail1">Fee</label>
                                            <span asp-validation-for="Cost" class="text-danger"></span>

                                            <input asp-for="Cost"
                                                   type="text" class="form-control" placeholder="Fee">
                                        </div>
                                    </div>
                                    <div class="col-md-4">

                                        <div class="form-group">
                                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                            <label for="exampleInputEmail1">Course Duration</label>
                                            <span asp-validation-for="CourseDuration" class="text-danger"></span>

                                            <input asp-for="CourseDuration"
                                                   type="text" class="form-control" id="exampleInputEmail1" placeholder="Course Duration">
                                        </div>

                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-3">

                                        <div class="form-group">
                                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                            <label for="exampleInputEmail1">IELTS Band</label>
                                            <span asp-validation-for="IELTSBand" class="text-danger"></span>

                                            <input asp-for="IELTSBand"
                                                   type="text" class="form-control" placeholder="IELTS Band">
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                            <label for="exampleInputEmail1">GRE Score</label>
                                            <span asp-validation-for="GREScore" class="text-danger"></span>

                                            <input asp-for="GREScore" type="text" class="form-control" placeholder="GRE Score">
                                        </div>

                                    </div>
                                    <div class="col-md-3">

                                        <div class="form-group">
                                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                            <label for="exampleInputEmail1">TOEFL Score</label>
                                            <span asp-validation-for="TOEFLScore" class="text-danger"></span>

                                            <input asp-for="TOEFLScore" type="text" class="form-control" placeholder="TOEFL Score">
                                        </div>

                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                            <label for="exampleInputEmail1">SAT Score</label>
                                            <span asp-validation-for="SATScore" class="text-danger"></span>

                                            <input asp-for="SATScore" type="text" class="form-control" placeholder="SAT Score">
                                        </div>

                                    </div>
                                </div>





                            </div>
                            <!-- /.card-body -->


                        </div>



                        <div class="col-md-12">

                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary">
                                    <span class="tf-icons fas fa-save"></span>&nbsp; Update
                                </button>
                                <a asp-action="Edit" asp-route-id="@Model.CourseId" class="btn btn-default">
                                    <span class="tf-icons fas fa-times"></span>&nbsp; Cancel
                                </a>
                                <button class="btn btn-outline-info pull-right" asp-action="Index">
                                    <span class="tf-icons fas fa-list-ul"></span>&nbsp; View List
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
                <!-- /.card -->
            </div>
        </div>
    </div>
</section>

@section Scripts{
    <script type="text/javascript">

        $(document).ready(function() {
            //$("#CollegeFields").hide();

            $("#CountryList").change(function() {
                $("#UniversityList").empty();
                $("#DepartmentId").empty();
                $.ajax({
                    type: 'GET',
                    url: '@Url.Action("LoadUniversities")',
                    dataType: 'json',
                    data: { id: $("#CountryList").val() },

                    success: function(universities) {
                        $("#UniversityList").append('<option value="' + -1 + '"> ' +
                            "Select University / College" + '</option>');

                        $("#DepartmentId").append('<option value="' + -1 + '"> ' +
                            "Select Department" + '</option>');

                        $.each(universities, function(i, univ) {
                            $("#UniversityList").append('<option value="' + univ.value + '">' +
                                univ.text + '</option>');
                        });
                    },
                    error: function(ex) {
                        alert('Faliled to retrieve universities.' + ex);
                    }
                });
                return false;
            })

            $("#UniversityList").change(function() {
                $("#DepartmentId").empty();
                $.ajax({
                    type: 'GET',
                    url: '@Url.Action("LoadDepartments")',
                    dataType: 'json',
                    data: { id: $("#UniversityList").val() },

                    success: function(departments) {
                        $("#DepartmentId").append('<option value="' + -1 + '"> ' +
                            "Select Department" + '</option>');

                        $.each(departments, function(i, dept) {
                            $("#DepartmentId").append('<option value="' + dept.value + '">' +
                                dept.text + '</option>');
                        });

                    },
                    error: function(ex) {
                        alert('Faliled to retrieve departments.' + ex);
                    }
                });
                return false;
            })

        })

    </script>


}