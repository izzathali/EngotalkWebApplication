@using Engotalk.ViewModel
@{
    ViewData["Title"] = "Universities";
    IEnumerable<UniversityVM> universitiesVM = ViewBag.Universities as IEnumerable<UniversityVM>;
    IEnumerable<CollegeVM> collegeVM = ViewBag.colleges as IEnumerable<CollegeVM>;
}
<link rel="stylesheet" href="~/css/UnivStyle.css" asp-append-version="true" />



<!--::review_part start::-->
<section class="special_cource padding_top">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-5">
                <div class="section_tittle text-center">
                    <p>@ViewBag.Course</p>
                    <h2>Universities</h2>
                </div>
            </div>
        </div>
    </div>
</section>


<div class="whole-wrap member_counter">
    <div class="container ">
        <div class="body-tbl text-center">

            <table class="styled-table justify-content-center ">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Name Of Institute</th>
                        @*  <th>IELTS Band</th>
                        <th>Ranking (QS)</th>*@
                        <th>Location</th>
                        <th>Established</th>
                        <th>Type</th>
                        <th>Duration</th>
                        <th>Tuition Fees</th>
                        <th>Exams Accepted</th>
                    </tr>
                </thead>
                <tbody>
                    @if (universitiesVM != null)
                    {
                        int no = 1;
                        @foreach (var item in @universitiesVM)
                        {
                            <tr>
                                <td>@no</td>
                                <td>@item.University</td>
                                @*
                        <td>@item.Band</td>
                        <td>@item.Rank</td>
                        *@
                                <td>@item.Location</td>
                                <td>@item.Established</td>
                                <td>@item.Type</td>
                                <td class="exper">@item.Duration</td>
                                <td>@item.Cost</td>
                                <td>@item.ExamsAccepted</td>

                            </tr>

                            no++;
                        }

                    }

                </tbody>
            </table>
        </div>
    </div>
</div>

<section id="collegeid" class="special_cource padding_top">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-5">
                <div class="section_tittle text-center">
                    <p>@ViewBag.Course</p>
                    <h2>Colleges</h2>
                </div>
            </div>
        </div>

    </div>
</section>


<div class="whole-wrap member_counter">
    <div class="container" style="padding:0!important">
        <div class="body-tbl text-center">

            <table class="styled-table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Name Of Institute</th>
                        @*<th>IELTS Requirement</th>*@
                        <th>IELTS</th>
                        <th>GRE</th>
                        <th>TOEFL</th>
                        <th>SAT</th>
                    </tr>
                </thead>
                <tbody>
                    @if (collegeVM != null)
                    {
                        int no = 1;
                        @foreach (var item in @collegeVM)
                        {
                            <tr>
                                <td>@no</td>
                                <td>@item.College</td>
                                @* <td>@item.IELTSRequirment</td>*@
                                <td>@item.IELTSBand</td>
                                <td>@item.GREScore</td>
                                <td>@item.TOEFLlScore</td>
                                <td>@item.SATScore</td>
                            </tr>

                            no++;
                        }

                    }

                </tbody>
            </table>
        </div>
    </div>
</div>